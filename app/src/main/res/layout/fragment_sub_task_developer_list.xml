<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.pmsystem.developer.subtaskdeveloper.subtasklist.SubTaskDeveloperListFragment">

    <TextView
        android:id="@+id/no_sub_task_developer_tv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="No Sub Task"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        android:visibility="gone" />

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:id="@+id/sub_task_developer_list_rv" />

</LinearLayout>
